container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python library/manage.py migrate --noinput"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "library.settings"
    PYTHONPATH: "/opt/python/current/app/library:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: library.wsgi
    NumProcesses: 3
    NumThreads: 20
