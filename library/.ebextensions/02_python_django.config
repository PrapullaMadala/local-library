container_commands:
  01syncdb:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && django-admin.py syncdb --noinput"
    leader_only: true
  02_migrate:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && django-admin.py migrate --noinput"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "library.settings"
    PYTHONPATH: "/var/app/current/library:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: library.wsgi:application
    NumProcesses: 1
    NumThreads: 15
  "aws:elasticbeanstalk:xray":
    XRayEnabled: true
