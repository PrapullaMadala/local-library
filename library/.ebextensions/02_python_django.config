container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python library/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python library/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python library/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "library.settings"
    PYTHONPATH: "/opt/python/current/app/library:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: library.wsgi:application
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "library/static/"